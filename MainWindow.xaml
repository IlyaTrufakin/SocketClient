<Window x:Class="SocketClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocketClient"
        mc:Ignorable="d"
        Title="Communication test" Height="400" Width="800" MinWidth="500" MinHeight="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>


        <DockPanel Grid.Row="0" Background="#FFADADAD">
            <Label DockPanel.Dock="Left" VerticalAlignment="Center">Enter IP address:</Label>
            <TextBox DockPanel.Dock="Left" Name="ipAddress" Width="100" VerticalAlignment="Center"></TextBox>
            <Label DockPanel.Dock="Left" VerticalAlignment="Center" >Enter port number:</Label>
            <TextBox DockPanel.Dock="Left" Name="portNumber" Width="50" VerticalAlignment="Center" ></TextBox>
            <Button DockPanel.Dock="Right" Margin="5" Background="#FF07BB33" Width="60" HorizontalAlignment="Right">Connect</Button>
        </DockPanel>
        
        
 
    </Grid>
</Window>
